<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>New <%= @ticket.title %></h1>
    <a href="<%= url_for :action => :index %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      <input type="hidden" name="id" value="<%= @ticket.object %>"/>

      
          <div data-role="fieldcontain">
            <label for="ticket[human_id]" class="fieldLabel">Human</label>
            <input type="text" id="ticket[human_id]" name="ticket[human_id]" <%= placeholder("Human") %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="ticket[human_id_formatted]" class="fieldLabel">Human id formatted</label>
            <input type="text" id="ticket[human_id_formatted]" name="ticket[human_id_formatted]" <%= placeholder("Human id formatted") %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="ticket[subject]" class="fieldLabel">Subject</label>
            <input type="text" id="ticket[subject]" name="ticket[subject]" <%= placeholder("Subject") %> />
          </div>
      

      <input type="submit" value="Create"/>
    </form>
  </div>

</div>
