<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :index %>
    <h1>New Ticket</h1>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      <input type="hidden" name="id" value="<%= @ticket.object %>"/>
      <table>
          
            <tr>
                <td class="itemLabel">Human: </td>
                <td class="itemValue"><input type="text" name="ticket[human_id]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Human id formatted: </td>
                <td class="itemValue"><input type="text" name="ticket[human_id_formatted]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Subject: </td>
                <td class="itemValue"><input type="text" name="ticket[subject]"/></td>
            </tr>
          
      </table>
      <input type="submit" value="Create"/>
    </form>
  </div>

</div>
