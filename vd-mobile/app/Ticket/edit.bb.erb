<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :show, :id => @ticket.object %>
    <h1>Edit <%= @ticket.human_id%></h1>
    <%= link_to "Delete", :action => :delete, :id => @ticket.object %>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @ticket.object %>"/>
      <table>
          
          <tr>
              <td class="itemLabel">Human: </td>
              <td class="itemValue"><input type="text" name="ticket[human_id]" value="<%= @ticket.human_id %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Human id formatted: </td>
              <td class="itemValue"><input type="text" name="ticket[human_id_formatted]" value="<%= @ticket.human_id_formatted %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Subject: </td>
              <td class="itemValue"><input type="text" name="ticket[subject]" value="<%= @ticket.subject %>"/></td>
          </tr>
          
      </table>
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
